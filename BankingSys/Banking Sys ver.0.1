#include <iostream>

using namespace std;

typedef struct
{
	int accID;
	char cusName[20];
	int balance;
}BankAccount;

BankAccount acc[2] = { 0 };

void showMenu(void);
void MakeAccount(void);
void DepositMoney(void);
void WithdrawMoney(void);
void ShowAllAccInfo(void);

int main(void)
{
	int choice;

	while (1)
	{
		showMenu();
		cout << "선택: ";
		cin >> choice;
		cout << endl;
		switch (choice)
		{
		case 1:
			MakeAccount();
			break;
		case 2:
			DepositMoney();
			break;
		case 3:
			WithdrawMoney();
			break;
		case 4:
			ShowAllAccInfo();
			break;
		case 5:
			exit(1);
		default:
			cout << "잘못된 입력입니다 다시 입력하세요" << endl;
		}

	}
	return 0;
}
void showMenu(void)
{
	cout << "=======menu=======" << endl;
	cout << "1. 계좌 개설" << endl;
	cout << "2. 입금" << endl;
	cout << "3. 출금" << endl;
	cout << "4. 잔액 조회" << endl;
	cout << "5. 프로그램 종료" << endl;
	cout << "=======menu=======" << endl;
}
void MakeAccount(void)
{
	int id;
	char name[20];
	int balance;

	cout << "===============MakeAccount===============" << endl;
	cout << "customer's Account number: ";
	cin >> id;

	for (int i = 0; i < 2; i++) 
	{
		if (acc[i].accID == 0) 
		{ 
			acc[i].accID = id;
			cout << "customer's Name: ";
			cin >> name;
			strcpy_s(acc[i].cusName, name);
			cout << "customer's Account balance: ";
			cin >> balance;
			acc[i].balance = balance;

			cout << "=========complete Make Account ===========" << endl;
			return;
		}
	}

	cout << "더 이상 계좌를 생성할 수 없습니다." << endl;

	cout << "=========complete Make Account ===========" << endl;
}
void DepositMoney(void) // 없는 계좌를 넣으면 없다고 안내
{
	int id, amount;
	cout << "계좌 번호: ";
	cin >> id;
	cout << "입금액: ";
	cin >> amount;

	for (int i = 0; i < 2; i++) 
	{
		if (acc[i].accID == id) 
		{
			acc[i].balance += amount;
			cout << "입금 완료! 현재 잔액: " << acc[i].balance << endl;
			return;
		}
	}
	cout << "존재하지 않는 계좌입니다." << endl;
}
void WithdrawMoney(void) // 소지금보다 많이 빠지면 잔액부족 안내
{
	int id, amount;
	cout << "계좌 번호: ";
	cin >> id;
	cout << "출금액: ";
	cin >> amount;

	for (int i = 0; i < 2; i++) 
	{
		if (acc[i].accID == id) 
		{
			if (acc[i].balance < amount) 
			{
				cout << "잔액 부족!" << endl;
				return;
			}
			acc[i].balance -= amount;
			cout << "출금 완료! 현재 잔액: " << acc[i].balance << endl;
			return;
		}
	}
	cout << "존재하지 않는 계좌입니다." << endl;
}
void ShowAllAccInfo(void)
{
	int i = 0;
	for (i = 0; i < 2;i++)
	{
		cout << "고객명: " << acc[i].cusName << endl;
		cout << "계좌번호: " << acc[i].accID << endl;
		cout << "계좌잔액: " << acc[i].balance << endl;
	}

}

