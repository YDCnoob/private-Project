class Temporary : public Employee// 임시직 = 시급 * 근로시간 
{
private:
	int payPerHour;
	int WorkTime;

public:
	Temporary(const char* _name, int _pay)
		:Employee(_name), payPerHour(_pay)
	{}

	int AddWorkTime(int n1)
	{
		return WorkTime = n1;
	}

	int GetPay()
	{
		return payPerHour * WorkTime;
	}

	void ShowTempInfo()
	{
		ShowEmpInfo();
		cout << "Salary: " << GetPay() << endl;
	}
};

