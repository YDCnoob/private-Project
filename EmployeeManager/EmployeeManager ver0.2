#include <iostream>
using namespace std;

#define MAN 50

class Employee
{
private:
	char* name;

public:
	Employee(const char* _name) 
	{
		name = new char[strlen(_name) + 1];
		strcpy_s(name, strlen(_name) + 1, _name);
	}

	void ShowEmpInfo() const
	{
		cout << "이 름: " << name << endl;
	}
};

class PermanentWorker : public Employee// 정규직 = 기본급여
{
private:
	int salary;

public:
	PermanentWorker(const char* name, int money) 
		:Employee(name),salary(money)
	{
		
	}

	int GetPay() const
	{
		return salary;
	}
	
	void ShowSalaryInfo() const
	{
		ShowEmpInfo();
		cout << "salary: " << salary << endl;
	}
	~PermanentWorker() {}
};

class Sales : public PermanentWorker// 영업직 = 기본급여 + 인센티브
{
private:
	int Incentive;

public:
	Sales(const char* _name, int _salary, int _incen)
		:PermanentWorker(_name, _salary), Incentive(_incen)
	{}

	void ShowSalesInfo() const
	{
		ShowSalaryInfo();
		cout << "추가 급여: " << Incentive << endl;
	}
};

class Temporary : public Employee// 임시직 = 시급 * 근로시간 
{
private:
	int TimeWage;
	int WorkTime;

public:
	Temporary(const char* _name,int _TimeWage, int _WorkTime)
		:Employee(_name), TimeWage(_TimeWage), WorkTime(_WorkTime)
	{}

	void ShowTempInfo()
	{
		ShowEmpInfo();
		cout << "급 여: " << TimeWage * WorkTime << endl;
	}
};

