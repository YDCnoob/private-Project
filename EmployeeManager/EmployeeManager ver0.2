#include <iostream>
using namespace std;

#define MAN 50

class Employee
{
private:
	char* name;

public:
	Employee(const char* _name) 
	{
		name = new char[strlen(_name) + 1];
		strcpy_s(name, strlen(_name) + 1, _name);
	}

	void ShowEmpInfo() const
	{
		cout << "name: " << name << endl;
	}
};

class PermanentWorker : public Employee// 정규직 = 기본급여
{
private:
	int salary;

public:
	PermanentWorker(const char* name, int money) 
		:Employee(name),salary(money)
	{
		
	}

	int GetPay() const
	{
		return salary;
	}
	
	void ShowSalaryInfo() const
	{
		ShowEmpInfo();
		cout << "Salary: " << GetPay() << endl;
	}
	~PermanentWorker() {}
};

