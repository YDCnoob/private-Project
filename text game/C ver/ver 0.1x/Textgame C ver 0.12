    }
}
void upgrade_weapon(CHARACTER* character)
{
    const int upgrade_cost = 50;
    const int max_weaponup = 99;  // ✅ 강화 제한 해제
    const int base_success_rate = 100;
    const int decrease_per_level = 5;  // 강화 단계가 높아질수록 감소량
    const int min_success_rate = 40;

    if (character->gold < upgrade_cost)
    {
        printf("현재 소지 금액: %dG\n", character->gold);
        printf("골드가 부족합니다. 강화할 수 없습니다.\n\n");
        return;
    }

    if (character->weaponup >= max_weaponup)
    {
        printf("강화 제한에 도달했습니다. 최대 강화 수치는 +%d입니다.\n\n", max_weaponup);
        return;
    }

    character->gold -= upgrade_cost;

    int current_level = character->weaponup;
    int success_rate;

    if (current_level < 10)
    {
        success_rate = base_success_rate;
    }
    else
    {
        success_rate = base_success_rate - (current_level - 9) * decrease_per_level;
        if (success_rate < min_success_rate) success_rate = min_success_rate;
    }

    int roll = rand() % 100;

    if (roll < success_rate)
    {
        character->weaponup++;
        character->weapondmg += (current_level < 10) ? 2 : 3;
        printf("무기 강화 성공! 무기 데미지가 %s 증가했습니다. [+%d]\n\n",
            (current_level < 10) ? "+2" : "+3", character->weaponup);
    }
    else
    {
        printf("무기 강화 실패... (현재 무기 강화 수치: +%d)\n\n", character->weaponup);
    }
}

