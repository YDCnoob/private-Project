void rage_strike(CHARACTER* c, MOP* m)
{
    int missing_hp = c->max_hp - c->hp;
    int bonus = (int)(missing_hp * 0.2);
    int damage = calculateDamage(c, NULL) + bonus;
    m->hp -= damage;
    m->hp = clampHP(m->hp);
    printf("[분노의 일격] %s에게 %d 데미지를 입혔습니다! (보너스 %d)\n", m->name, damage, bonus);
}

