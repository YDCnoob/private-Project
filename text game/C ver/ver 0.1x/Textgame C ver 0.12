void shield_bash(CHARACTER* c, MOP* m)
{
    int damage = (int)(calculateDamage(c, NULL) * 1.0);
    m->hp -= damage;
    m->hp = clampHP(m->hp);
    printf("[방패 밀치기] %s에게 %d 데미지를 입혔습니다! (기절 효과)\n", m->name, damage);
