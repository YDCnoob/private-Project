int clampHP(int hp)
{
    return hp < 0 ? 0 : hp;
}

int clampAndCheckDeath(int* hp)
{
    if (*hp <= 0)
    {
        *hp = 0;
        return 1;
    }
    return 0;
}

void waitForKeyPress()
{
    printf("계속하려면 Enter 또는 Spacebar를 누르세요...");
    Sleep(500);
    while (1)
    {
        int key = _getch();
        if (key == ' ' || key == 13)
            break;
    }
    printf("\n");
}

void smash(CHARACTER* c, MOP* m)
{
    int isCrit = 0;
