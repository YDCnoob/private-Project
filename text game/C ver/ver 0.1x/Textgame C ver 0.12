void applyStatusEffects(MOP* m)
{
    if (m->isPoisoned && m->poisonTurns > 0)
    {
        int poisonDmg = 5;
        m->hp -= poisonDmg;
        m->hp = clampHP(m->hp);
        printf(">> %s는 중독 상태로 %d의 피해를 입었다! (남은 체력: %d)\n", m->name, poisonDmg, m->hp);
        m->poisonTurns--;

        if (m->poisonTurns == 0)
        {
            m->isPoisoned = 0;
            printf(">> %s의 중독이 해제되었습니다.\n", m->name);
        }
    }

    if (m->isBleeding && m->bleedTurns > 0)
    {
        int bleedDmg = 7;
        m->hp -= bleedDmg;
        m->hp = clampHP(m->hp);
        printf(">> %s는 출혈로 %d의 피해를 입었다! (남은 체력: %d)\n", m->name, bleedDmg, m->hp);
        m->bleedTurns--;

        if (m->bleedTurns == 0)
        {
            m->isBleeding = 0;
            printf(">> %s의 출혈이 멈췄습니다.\n", m->name);
        }
    }

    // 기절 빙결 추후 추가 예정
}

int isBossFloor(int dun_lev)
{
    return dun_lev % 5 == 0;
}

void resetBoss(MOP* boss, int level, int isNight)
{

    char* bossNames[] = { "슬라임 킹", "임프 군주", "고블린 장군", "오우거", "드래곤" };
    int index = (level / 5 - 1);
    if (index < 0) index = 0;
    strcpy_s(boss->name, sizeof(boss->name), bossNames[index % 5]);

    boss->hp = boss->base_hp + level * 50;
    boss->dam = boss->basDam + level * 5;
    boss->exp = boss->base_exp + level * 10;
    boss->reward_gold = boss->base_gold + level * 20;

    if (isNight)
    {
        boss->hp = (int)(boss->hp * NIGHT_HP_MULT);
        boss->dam = (int)(boss->dam * NIGHT_DAM_MULT);
        boss->exp = (int)(boss->exp * NIGHT_EXP_MULT);
        boss->reward_gold = (int)(boss->reward_gold * NIGHT_GOLD_MULT);
    }
}

void fightBoss(CHARACTER* character, MOP* boss, int dun_lev)
{
    textcolor(RED);
    printf("%s(이/가) 나타났다! 싸우겠습니까? (Y/n) ", boss->name);
    textcolor(WHITE);
    char choice = _getch();
    printf("\n");

    if (choice == 'n' || choice == 'N')
    {
        printf("%s(을/를) 회피했습니다..\n", boss->name);
        return;
    }

    printf("%s와 전투를 시작합니다!\n\n", boss->name);
    Sleep(300);

    while (boss->hp > 0 && character->hp > 0)
    {
        applyStatusEffects(boss);

        int skillChance = rand() % 100;
        if (skillChance < 30)
        {
            int idx = rand() % MAX_SKILLS;
            SKILL* sk = &character->skills[idx];

            textcolor(SkyBlue);
            printf("★ 스킬 발동! [%s] ★\n", sk->name);
            textcolor(WHITE);

            int isCritSkill = 0;
            int base = calculateDamage(character, &isCritSkill);
            int dmg = (int)(base * sk->damage_multiplier);
            if (isCritSkill)
                printCritMessage(character->name, boss->name, 1);

            boss->hp -= dmg;
            boss->hp = clampHP(boss->hp);
            printf("[%s] %s에게 %d 데미지를 입혔습니다! (남은 체력: %d)\n\n",
                sk->name, boss->name, dmg, boss->hp);
            Sleep(300);
        }

        int isCrit = 0;
        int damToBoss = calculateDamage(character, &isCrit);
        if (isCrit)
            printCritMessage(character->name, boss->name, 1);

        boss->hp -= damToBoss;
        boss->hp = clampHP(boss->hp);
        printf("%s에게 %d의 데미지를 입혔다! (남은 체력: %d)\n", boss->name, damToBoss, boss->hp);
        Sleep(300);

        if (boss->hp <= 0)
        {
            textcolor(YELLOW);
            printf("\n%s를 처치했다!\n", boss->name);
            character->exp += boss->exp;
            character->gold += boss->reward_gold;
            printf("%d의 경험치를 획득했다!\n", boss->exp);
            printf("%d의 골드를 획득했다!\n\n", boss->reward_gold);
            textcolor(WHITE);
            waitForKeyPress();
            levelUp(character);
            break;
        }

        int mobCrit = rand() % 100 < 10;
        double critMultiplier = mobCrit ? 1.2 : 1.0;
        int rawDamage = (int)(boss->dam * critMultiplier);
        int damToChr = rawDamage - character->defense;
        if (damToChr < 0) damToChr = 0;

        if (character->evadeTurns > 0)
        {
            character->evadeTurns--;
            textcolor(GREEN);
            printf("<< 연막 효과로 %s는 완벽히 회피했다! >> (남은 턴: %d)\n\n", character->name, character->evadeTurns);
            textcolor(WHITE);
            continue;
        }

        int evade = rand() % 100;
        if (evade < character->evasion)
        {
            textcolor(GREEN);
            printf("%s의 공격을 %s가 회피했다!\n\n", boss->name, character->name);
            textcolor(WHITE);
            continue;
        }

        if (mobCrit)
            printCritMessage(boss->name, character->name, 0);

        character->hp -= damToChr;
        character->hp = clampHP(character->hp);
        printf("%s(이/가) %s에게 %d의 데미지를 입혔다! (남은 체력: %d)\n\n",
            boss->name, character->name, damToChr, character->hp);
        Sleep(500);

        if (clampAndCheckDeath(&character->hp))
        {
            printf("%s(이/가) 사망했습니다... 게임 오버!\n", character->name);
            exit(0);
        }
    }
}

