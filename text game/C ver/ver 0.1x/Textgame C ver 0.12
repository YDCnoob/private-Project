void CreateCharacter(CHARACTER* character)
{
    textcolor(WHITE);
    printf("이름을 입력하세요: ");
    scanf_s("%s", character->name, (unsigned int)sizeof(character->name));

    printf("\n--- 직업 선택 ---\n");
    textcolor(RED);
    printf("1. 전사(Warrior): 힘과 체력이 높음\n");
    textcolor(GREEN);
    printf("2. 궁수(Archer): 민첩하고 회피력이 높음\n");
    textcolor(BLUE);
    printf("3. 마법사(Mage): 지능이 높고 마법 공격 강함\n");
    textcolor(YELLOW);
    printf("4. 도적(Rogue): 행운이 높아 치명타 확률 높음\n");
    textcolor(WHITE);
    printf("직업을 선택하세요 (1-4): ");

    int choice;
    scanf_s("%d", &choice);
    while (getchar() != '\n');
    printf("\n");

    switch (choice)
    {
    case 1: SetWarrior(character); break;
    case 2: SetArcher(character); break;
    case 3: SetMage(character); break;
    case 4: SetRogue(character); break;
    default:
        printf("잘못된 선택입니다. 전사로 설정합니다.\n");
        SetWarrior(character);
        break;
    }

    // 공통 초기화
    character->level = 1;
    character->hp = character->max_hp;
    character->exp = 0;
    character->gold = 0;
    character->weapondmg = 0;
    character->weaponup = 0;
    character->isNight = 0;
    character->evadeTurns = 0;

    printf("\n캐릭터 생성 완료!\n");
    PrintCharacterStat(character);
}

